@page
@model CaffeIn.Pages.User.GantiPasswordModel
@{
    ViewData["Title"] = "Ganti Password";
}

<h1>Ganti Password</h1>

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="GantiPass.CurrentPassword">Masukkan Password</label>
        <input asp-for="GantiPass.CurrentPassword" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="GantiPass.NewPassword">Password Baru</label>
        <input asp-for="GantiPass.NewPassword" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="GantiPass.KonfirmasiPassword">Konfirmasi Password</label>
        <input asp-for="GantiPass.KonfirmasiPassword" class="form-control">
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
</form>

