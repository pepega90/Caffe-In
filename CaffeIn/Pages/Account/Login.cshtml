@page
@model CaffeIn.Pages.Account.LoginModel

    <div class="col-md-6 login-form-1">
        <h3 class="mb-5">Login</h3>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form method="post" novalidate>
            <div class="form-group">
                <input asp-for="loginViewModel.Email" class="form-control" placeholder="E-Mail" />
            </div>
            <div class="form-group">
                <input asp-for="loginViewModel.Password" class="form-control" placeholder="Password" />
            </div>
            <div class="form-group form-check-inline">
                <label asp-for="loginViewModel.RememberMe"></label>
                <input asp-for="loginViewModel.RememberMe" class="form-check ml-3" />
            </div>
            <div class="form-group">
                <input type="submit" class="btnSubmit" value="Login" />
            </div>
        </form>
        <div>
            <a asp-page="Daftar">Belum Punya Akun? Buat Sekarang!</a>
        </div>
    </div>