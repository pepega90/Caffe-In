@page
@model CaffeIn.Pages.Account.DaftarModel



<div class="col-md-6 login-form-1">
    <h3 class="mb-5">Daftar</h3>
    <div class="text-danger" asp-validation-summary="All"></div>
    <form method="post" novalidate>
        <div class="form-group">
            <label asp-for="daftarViewModel.Email">E-Mail</label>
            <input asp-for="daftarViewModel.Email" class="form-control" placeholder="Masukkan E-Mail" />
        </div>
        <div class="form-group">
            <label asp-for="daftarViewModel.Password"></label>
            <input asp-for="daftarViewModel.Password" class="form-control" placeholder="Masukkan Password" />
        </div>
        <div class="form-group">
            <label asp-for="daftarViewModel.KonfirmasiPassword"></label>
            <input asp-for="daftarViewModel.KonfirmasiPassword" class="form-control" placeholder="Konfirmasi Password" />
        </div>
        <div class="form-group">
            <input type="submit" class="btnSubmit" value="Daftar" />
        </div>
    </form>
</div>
